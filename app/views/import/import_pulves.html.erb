<% title "Import", false %>
<% titre = "Pulves" %>
<% lien1 = button_to("Tester le fichier", :action => :import_pulves, :force => false) %>
<% lien2 = button_to("Importer malgrÃ© les warnings", :action => :import_pulves, :force => true) %>

<div id="title_h1">
	<span class=title><%= titre %></span>
	<span class=link><%= lien1 %></span>
	<span class=link><%= lien2 %></span>
</div>
force: <%= @force %><br>
has_warnings: <%= @import.has_warnings.to_s %><br>
has_invalids: <%= @import.has_invalids.to_s %><br>
state: <%= @state.to_s %><br>

<% if @state.eql?(:read) %>
	<% if ((@import.has_invalids?) ||
		(@import.has_warnings? && @force.eql?(false))) %>
		<h2>Analyse du fichier</h2>
		<%= render(:partial => "warnings") %>
	<% end %>

<% elsif @state.eql?(:import) %>
	<h2>Import des donnees</h2>
	<% if @import.has_errors? %>
		<%= render(:partial => "errors") %>
	<% else %>
		<p>all imported ok</p>
	<% end %>
<% end %>
		
		
		
		
		
		