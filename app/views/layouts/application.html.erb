<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'table' %>
    <%= stylesheet_link_tag 'table_scroll' %>
    <%= stylesheet_link_tag 'popup' %>
    <%= stylesheet_link_tag 'index-list' %>

	<%= javascript_include_tag "sortable" %>
	<%= javascript_include_tag "table" %>
	<%= javascript_include_tag "prototype" %>
	<%#= javascript_include_tag :defaults %>
	
	<%= yield(:head) %>
    <% javascript_tag do %>
      <%= yield(:jstemplates) %>
    <% end -%>

  </head>
  <body>
		<link rel="icon" type="image/png" href="/images/graph-icon.png" />
	<%= render(:file => "/layouts/_menu.html.erb", :use_full_path => true) %>  
    <div id="container">

	<%- flash.each do |name, msg| -%>
		<%= content_tag :div, msg, :id => "flash_#{name}" %>
	<%- end -%>
 
    <%- if show_title? -%>
      <h1><%=h yield(:title) %></h1>	  
    <%- end -%>

    <%= yield %>
	
  </div>

<%= render(:file => "/layouts/_tete.html.erb", :use_full_path => true) %>  
</body>
</html>

