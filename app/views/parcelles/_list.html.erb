<table class=table_data>
  <tr>
    <td>Nom</td>
    <td class=right>surface (Ha)</td>
    <td>Culture</td>
	<% if admin? %>
	    <td></td>
		<td></td>
		<td></td>
	<% end %>
  </tr>

<% sum_surfaces = 0 %>
<% surfaces = {} %>
<% @saison.typecultures.each do |typeculture| %>
	<% surfaces[typeculture.name.to_sym] = 0 %>
<% end %>

<% @parcelles.each do |parcelle| %>
	<% sum_surfaces += parcelle.surface %>
	<% surfaces[parcelle.typeculture.name.to_sym] += parcelle.surface %>
  <tr class=color_culture_<%= parcelle.typeculture.code %>>
    <td><%= parcelle.name %></td>
    <td class=right><%= parcelle.surface.display(2) %></td>
    <td><%= parcelle.typeculture.name %></td>
	
	<% if admin? %>
	    <td><%= link_to 'Voir', parcelle %></td>
	    <td><%= link_to 'Modifier', edit_parcelle_path(parcelle) %></td>
	    <td><%= link_to 'Supprimer', parcelle, :confirm => 'Are you sure?', :method => :delete %></td>
	<% end %>
  
  </tr>
<% end %>

<!-- TR vide -->
<tr>
	  <td></td>
	  <td class=right></td>
	  <td></td>

		<% if admin? %>
		    <td></td>
		    <td></td>
		    <td></td>
		<% end %>
</tr>

