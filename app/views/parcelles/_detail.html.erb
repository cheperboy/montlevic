<table>
  <tr>
    <td>Parcelle | </td>
    <td>surface | </td>
    <td>Zones | </td>
    <td>surface | </td>
    <td>total | </td>
  </tr>

<% @parcelles.each do |parcelle| %>
  <tr>
    <td><%= link_to parcelle.name, edit_parcelle_path(parcelle) %> | </td>
    <td><%= parcelle.surface %> | </td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
  	<% zones = Zone.find_by_parcelle(parcelle.id) %>
	<% unless zones.nil? %>
	  	<% zones.each do |zone| %>
	  <tr>
	  	<td></td>
	    <td></td>
	    <td><%= zone.name %> | </td>
	    <td><%= zone.surface %> | </td>
	    <%= percent_of_zone(parcelle, zone.id) %>
	  </tr>
		<% end %>
	<% end %>
  </tr>
<% end %>
</table>
