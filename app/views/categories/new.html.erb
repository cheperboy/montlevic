<% title "Nouvelle Categorie" %>

<% form_for(@category) do |f| %>
  <%= f.error_messages %>

  <p>
	<%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
		Type : 
    <%= select("category", "upcategory_id", Upcategory.find(:all).collect{ |c| [ c.name, c.id] }) %>
  </p>
  <p>
    <%= f.submit "Creer" %>
  </p>
<% end %>

<%= link_to 'Annuler', categories_path %>