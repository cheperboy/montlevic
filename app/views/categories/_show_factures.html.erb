<table class=table_data>
	<tr>
		<th>Id</th>
		<th>Date</th>
		<th>Ref</th>
		<th>Nom</th>
		<th></th>
		<th>Cout</th>
		<th></th>
	</tr>

<%- sum = 0 -%>
<%- factures.each do |facture| -%>
	<% sum += facture.cout -%>
	<tr>
		<td><%=h facture.id.to_s %></td>
		<td><%=h facture.date.to_s %></td>
		<td><%=h facture.ref %></td>
		<td><%= link_to facture.name, facture_path(facture) %></td>
		<td><%= link_to image_tag('img-modif.png'), edit_facture_path(facture) %></td>
		<td class=right><%=h delim(facture.cout) %> <%= euro %></td>
		<td><%= popup_show(image_tag('img-voir.png'), pop_content(facture), "popup-show-content") %></td>
	</tr>
<%- end -%>
<tr>
	<td></td>
	<td></td>
	<td></td>
	<td><b>Somme</b></td>
	<td></td>
	<td><%= delim(sum) %> <%= euro %></td>
	<td></td>
</tr>
</table>