<% title "Type de culture  “#{@typeculture.name}” - #{@typeculture.surface.display} Ha" %>

<h3>Parcelles</h3>
	<table class=table_data>
	  <tr class=bold>
	    <th>id</th>
	    <th>Parcelle</th>
	    <th>surface vraie</th>
	    <th>surface pac</th>
	  </tr>
	<% @typeculture.parcelles.find_by_saison(:all).each do |parcelle| %>
	  <tr>
	    <td><%= parcelle.id %></td>
	    <td><%= parcelle.name %></td>
	    <td class='right'><%= parcelle.surface.display(2) %> ha</td>
	    <td class='right'><%= parcelle.surface_pac.display(2) %>ha</td>
	    <td><%= link_to_show (Parcelle, parcelle) %></td>
	  </tr>
	<% end %>
</table>


<h3>Couts des produits par categorie</h3>
<%= render(:partial => "typecultures/produit_par_cat/produit_par_cat", :locals => {:typeculture => @typeculture }) %>

<h2>marge brute</h2>
<% sum = calculate_marge_by_cat_for_typeculture(@typeculture) %>
<%#= render(:partial => "typecultures/marge_brute/marge_brute", :locals => {:typeculture => @typeculture, :sum => sum  }) %>

<h3>factures</h3>
<%= render(:partial => "typecultures/marge_brute/factures", :locals => {:typeculture => @typeculture, :sum => sum }) %>

<h3>ventes</h3>
<%= render(:partial => "typecultures/marge_brute/ventes", :locals => {:typeculture => @typeculture, :sum => sum }) %>
