- up_category.children.each do |category|
	- color = @coul[:cat][2]
	- fontsize = @fontsize[:cat][2]
	- prix          = number_with_delimiter(@sum_ventes[:prix][category.code.to_sym], :delimiter => "", :separator => ",")

	%row{:fontweight => "bold", :fontsize => "12", :level => "1", :fontsize => "#{fontsize}", :color => color}
		%column{:content => ""}
		%column{:content => "#{category.name}"}
		%column{:content => "#{prix}", :halign => "right", :format => "#,##0"}
			
	= render(:partial => "saisons/gdoc_synthese_ventes/synthese_ventes_recurs", :locals => { :up_category => category}) if category.has_children?
