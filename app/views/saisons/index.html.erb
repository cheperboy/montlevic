<% title "Saisons" %>

<table class=table_data>
  <tr class=bold>
    <td>Saison</td>
    <td>Annee</td>
    <td></td>
    <% if admin? %>
    	<td></td>
	<% end %>
  </tr>

<% @saisons.each do |saison| %>
  <tr>
    <td><%=h saison.name %></td>
    <td><%=h saison.year.to_s %></td>
    <td><%= link_to 'Modifier', edit_saison_path(saison) %></td>
    <% if admin? %>
		<td><%= link_to 'Supprimer', saison, :confirm => 'Supprimer vraiment?', :method => :delete %></td>
	<% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Creer une nouvelle saison', new_saison_path %>