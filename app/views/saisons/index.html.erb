<h1>Listing saisons</h1>

<table>
  <tr>
    <th>Saison</th>
    <th>Annee</th>
    <th></th>
    <% if admin? %>
    	<th></th>
	<% end %>
  </tr>

<% @saisons.each do |saison| %>
  <tr>
    <td><%=h saison.name %></td>
    <td><%=h saison.year.to_s %></td>
    <td><%= link_to 'Modifier', edit_saison_path(saison) %></td>
    <% if admin? %>
		<td><%= link_to 'Destroy', saison, :confirm => 'Are you sure?', :method => :delete %></td>
	<% end %>
  </tr>
<% end %>
</table>

<br />

