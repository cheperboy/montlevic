	<tr>
		<th id="nom">Pulves</th>
<% ( @test.Tcols[:ids].length * 2 + 5).times do %>
		<td></td>
<% end %>
	</tr>	

<% unless (@pulves.size == 0) %>

	<% @pulves.each do |pulve| %>
		<% dep = @test.Tpulves[pulve.id] %>
	
		<tr>
			<td class='left'><strong><%= pulve.category.name %></strong></td>
			<td class='left'><%= link_popup_pulve(dep) %></td>
			<td><%= pulve.date.to_s :dmy %></td>	
			<td>
				<%= pulve.parcelles.length %> p - 
				<%= pretty(dep[:surface_total]) %> ha
			</td>
			<td><%= pretty(dep[:ha_passage]) %>+<%= pretty(dep[:ha_produit]) %>=<%= pretty(dep[:ha]) %></td>
			<td><%= print_popup(pretty(dep[:total]), "@test.Tpulves[pulve.id][:total]") %></td>
		
		<% @test.Tcols[:ids].each do |id| %>
			<% cout_ha = pretty(dep[id][:ha]) %>
			<% cout_total = pretty(dep[id][:total]) %>
			<% td_class = odd(@test.Tcols[id][:rang]) %>
			<td class="<%= td_class %>"><%=h cout_ha %></td>
			<td class="<%= td_class %>"><%=h cout_total %></td>
		<% end %>
		</tr>
	<% end %>

	<tr class="total">
		<td>Total Pulve:	</td>
		<td></td>	
		<td></td>	
		<td></td>
		<td><%= pretty(@test.Tpulves[:ha][:sum]) %></td>
		<td><%= pretty(@test.Tpulves[:total][:sum]) %></td>	
	<% @test.Tcols[:ids].each do |id| %>
		<% cout_ha = pretty(@test.Tcols[id][:pulves][:ha][:sum]) %>
		<% cout_total = pretty(@test.Tcols[id][:pulves][:total][:sum]) %>
		<% td_class = odd(@test.Tcols[id][:rang]) %>
		<td class="<%= td_class %>_subtotal"><%=h cout_ha %></td>
		<td class="<%= td_class %>_subtotal"><%=h cout_total %></td>
	<% end %>
	</tr>
	
<% end %>