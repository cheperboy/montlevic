<% title "Factures", false %>

<% titre = "Factures payees" %>

<% lien1 = link_to 'Nouvelle facture', new_facture_path %>
<% lien2 = link_to 'Reports', {:controller => :factures, :action=> :reports} %>
<% lien3 = link_to 'Nouveau Report', {:controller => :factures, :action=> :new_report} %>
<% lien4 = link_to 'Nouveau Divers', {:controller => :factures, :action=> :new_diverse} %>
<div id="title_h1">
	<span class=title><%= titre %></span>
	<span class=link><%= lien1 %></span>
	<span class=link><%= lien2 %></span>
	<span class=link><%= lien3 %></span>
	<span class=link><%= lien4 %></span>
</div>

<% @elements = @factures %>
<div id='list_facture'>	
	<% unless @elements.count == 0 %>
		<%= facture_table(Application::FACTURE_HEAD_PAYEES, @elements, 'factures', 'index_paye', params) %>
	<% end %>
</div>

