<% title "Facture : #{@facture.name} " %>


<% if @facture.class == Diverse %>
	<p>
		| <%= star_ascii(@facture) %>
	  	| <%= adu_ascii(@facture) %>
		| <%= link_to "Liste des factures diverses", {:controller => 'factures', :action => 'diverses'} %> |
	</p>
	<%= star_ascii(@facture) %>
	<%= render :partial => 'show_diverse' %>
	
	<h2>Factures associ√©es</h2>
	<p>| <%= link_to "Ajouter une facture associee", new_facture_facdiv_url(@facture) %> |</p>

	<% unless @facture.facdivs.empty? %>
		<%= render :partial => "list_facdivs" %>
	<% end %>	
<% elsif @facture.class == Reportable %>
<p>
	| <%= star_ascii(@facture) %>
  	| <%= adu_ascii(@facture) %>
  	| <%= link_to "Modifier", {:controller => 'factures', :action => 'edit', :id => @facture.id} %>
  	| <%= link_to "Retour a la liste des factures", :controller => 'factures', :action => 'index' %> |
</p>
	<%= render :partial => 'show_reportable' %>
	
	<h2>reports associes</h2>
	<p>
		| <%= star_ascii(@facture) %>
	  	| <%= adu_ascii(@facture) %>
		| <%= link_to 'Ajouter un Report', {:controller => :factures, :action=> :new_report} %>
		| <%= link_to 'Retour a la liste des factures', {:controller => :factures} %> |
	</p>

	<% unless @facture.reports.empty? %>
		<%= render :partial => "list_reports" %>
	<% end %>
	
<% else %>
	<p>
	  |	<%= star_ascii(@facture) %>
	  | <%= adu_ascii(@facture) %>
	  | <%= link_to "Modifier", {:controller => 'factures', :action => 'edit', :id => @facture.id} %>
	  | <%= link_to "Retour a la liste des factures", :controller => 'factures', :action => 'index' %>
	</p>


	<%= render :partial => 'show_facture' %>

<% end %>