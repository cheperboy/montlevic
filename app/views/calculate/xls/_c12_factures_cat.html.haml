- if cat.code.eql?('produits_phyto')
  = render(:partial => "calculate/xls/c21_produits")
- name = "#{factcat.code}#{print_way(cat)}"
- @line +=1
%tr{:class => "level-#{cat.depth}_#{name}"}
  %td.col0= xls_sum_sub_cat_facture(@line, cat)
  - decal = cat.depth - 1
  - (decal).times do
    %td.col1
  %td.col2
    %b
      = cat.name
  - (@max_depth - decal).times do 
    %td.col3
  %td.saison
    %span.green= delim(@test.res.get_saison_line(@test.sid, :factures, :category, cat.id, :ha))
  %td.saison
    %span.green= delim(@test.res.get_saison_line(@test.sid, :factures, :category, cat.id, :total))
  - rang = 0
  - @colonnes.each do |colonne|
    - rang += 1
    - cout_ha = delim(@test.res.get_line(@test.sid, @test.c, colonne.id, :factures, :category, cat.id, :ha))
    - cout_total = delim(@test.res.get_line(@test.sid, @test.c, colonne.id, :factures, :category, cat.id, :total))
    %td{:class => "color_culture_#{colonne.code}"}
      %span.green= cout_ha
    %td{:class => "color_culture_#{colonne.code}"}
      %span.green= cout_total
- if cat.has_children?
  - cat.children.each do |cat|
    = render(:partial => "calculate/xls/c12_factures_cat", :locals => { :cat => cat, :factcat => factcat })
- else
  - cat.factures.find_by_saison(:all).each do |facture|
    = render(:partial => "calculate/xls/c13_factures_elt", :locals => {:cat => cat, |
      :factcat => factcat,                                                                 |
      :facture => facture,                                                                 |
      :name => name })                                                                     |
