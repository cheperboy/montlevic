- name = "#{@factcat.code}.produits_used"
- @line +=1
%tr{:class => "level-2_#{name}"}
  %td.col0= xls_sum_cat_produit(@line)
  %td.col1
  %td.col2
    %b
      = indent_cat_name(0, "")
    = 'Produits UtilisÃ©s'
  %td.col3
  %td.saison
    %span.green= delim(@test.res.get_other_line_for_saison(@test.sid, :resultats, :total_putoproduits, :ha))
  %td.saison
    %span.green= delim(@test.res.get_other_line_for_saison(@test.sid, :resultats, :total_putoproduits, :total))
  - rang = 0
  - @colonnes.each do |colonne|
    - rang += 1
    - cout_ha = delim(@test.res.get_other_line(@test.sid, @test.c, colonne.id, :resultats, :total_putoproduits, :ha))
    - cout_total = delim(@test.res.get_other_line(@test.sid, @test.c, colonne.id, :resultats, :total_putoproduits, :total))
    %td{:class => "color_culture_#{colonne.code}"}
      %span.green= h cout_ha
    %td{:class => "color_culture_#{colonne.code}"}
      %span.green= h cout_total
- cat = Category.root_produit
- if cat.has_children?
  - cat.children.each do |cat|
    = render(:partial => "calculate/xls/c22_produits_cat", :locals => { :cat => cat, :factcat => @factcat })
- else
  - cat.produits.find_by_saison(:all).each do |produit|
    = render(:partial => "calculate/xls/c23_produits_elt", :locals => { 	:cat => cat, |
      :factcat => @factcat,                                                                  |
      :produit => produit,                                                                   |
      :name => name })                                                                       |
